PACKAGE_NAME = @PACKAGE_NAME@
PACKAGE_VERSION = @PACKAGE_VERSION@

# Tools
OCAMLFIND = @OCAMLFIND@
OCAMLC = @OCAMLC@
OCAMLOPT = @OCAMLOPT@
OCAMLMKLIB = @OCAMLMKLIB@
ANNOTFLAG = @ANNOTFLAG@
OF_INSTALL = $(OCAMLFIND) install
OF_REMOVE = $(OCAMLFIND) remove

CC = $(shell $(OCAMLC) -config | grep bytecomp_c_compiler | sed 's/^\w\+:\s\+//')

# Configuration
CFLAGS += -Wall -Wextra -Wconversion -O2
LIBS += -lyices
